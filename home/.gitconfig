[user]
        name = Lewis Jones
  email = ljones140@gmail.com
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p
        dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"
[core]
        excludesfile = /Users/Lewis.Jones/.gitignore_global
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  line-numbers = true
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  syntax-theme = Monokai Extended
  navigate = true
  side-by-side = true
[push]
  default = simple
[diff "gpg"]
  textconv = gpg --quiet --no-tty --decrypt
[color]
        ui = true
; [color "diff-highlight"]
;       oldNormal = red bold
;       oldHighlight = red bold 52
;       newNormal = green bold
;       newHighlight = green bold 22
; [color "diff"]
;       meta = 227
;       frag = magenta bold
;       commit = 227 bold
;       old = red bold
;       new = green bold
;       whitespace = red reverse

[pull]
        rebase = false
[init]
        defaultBranch = main
[url "git@github.com:"]
        insteadOf = https://github.com/
        insteadOf = https://github.com/
